# Protect the .htaccess
<files ~ "^.*\.([Hh][Tt][Aa])">
order allow,deny
deny from all
satisfy all
</files>

RewriteEngine on

# pretty URL
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} on
RewriteRule (.*) http://%{HTTP_HOST}%{REQUEST_URI}

# Disable directory browsing
Options All -Indexes

# Error redirects
ErrorDocument 400 /error/bad-request.php
ErrorDocument 401 /error/unauthorised.php
ErrorDocument 403 /error/forbidden.php
ErrorDocument 404 /error/file-not-found.php
ErrorDocument 500 /error/internal-server-error.php


